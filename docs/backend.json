
{
  "entities": {
    "Profile": {
      "title": "User Profile",
      "description": "Personal details and aggregate wellness data.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "displayName": { "type": "string" },
        "currentWellnessScore": { "type": "number" },
        "sessionsCompleted": { "type": "number" },
        "joinedDate": { "type": "string", "format": "date" }
      }
    },
    "SessionLog": {
      "title": "Session Log",
      "description": "Detailed log for therapy sessions (Group, Individual, etc.).",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "type": { "type": "string", "enum": ["Group", "Individual", "Psychoeducation", "Family", "Other"] },
        "topic": { "type": "string" },
        "participationScore": { "type": "number", "description": "1-10 scale" },
        "moodScore": { "type": "number", "description": "1-10 scale" },
        "notes": { "type": "string" },
        "homeworkAssigned": { "type": "string" },
        "aiInsight": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["date", "type", "topic", "notes"]
    },
    "Assignment": {
      "title": "Therapy Assignment",
      "description": "Tasks or homework given by the therapist or self-assigned.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "dueDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["pending", "completed", "archived"] }
      },
      "required": ["title", "status"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/profiles/{userId}": {
      "schema": "Profile",
      "description": "Individual user settings and stats."
    },
    "/profiles/{userId}/sessions/{sessionId}": {
      "schema": "SessionLog",
      "description": "Individual logs of therapy sessions attended."
    },
    "/profiles/{userId}/assignments/{assignmentId}": {
      "schema": "Assignment",
      "description": "Therapy homework and action items."
    }
  }
}
