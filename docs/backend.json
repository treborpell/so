
{
  "entities": {
    "Profile": {
      "title": "User Profile",
      "description": "Personal details and aggregate wellness data.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "displayName": { "type": "string" },
        "currentWellnessScore": { "type": "number" },
        "sessionsCompleted": { "type": "number" },
        "joinedDate": { "type": "string", "format": "date" }
      }
    },
    "SOProgramEntry": {
      "title": "SO Program Entry",
      "description": "A single entry in the SO Program log, mapping exactly to spreadsheet columns.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "week": { "type": "number", "description": "WK column" },
        "sessionNumber": { "type": "number", "description": "# column" },
        "date": { "type": "string", "format": "date" },
        "cost": { "type": "number" },
        "paid": { "type": "boolean" },
        "checkNumber": { "type": "string" },
        "ableToPresent": { "type": "boolean" },
        "presentationTopic": { "type": "string" },
        "notes": { "type": "string" },
        "receipt": { "type": "string", "description": "Receipt reference or link" },
        "attachment1": { "type": "string" },
        "attachment2": { "type": "string" },
        "attachment3": { "type": "string" },
        "aiInsight": { "type": "string" }
      },
      "required": ["week", "sessionNumber", "date", "presentationTopic"]
    },
    "Assignment": {
      "title": "Therapy Assignment",
      "description": "Tasks or homework given by the therapist or self-assigned.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "dueDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["pending", "completed", "archived"] }
      },
      "required": ["title", "status"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/profiles/{userId}": {
      "schema": "Profile",
      "description": "Individual user settings and stats."
    },
    "/profiles/{userId}/so_entries/{entryId}": {
      "schema": "SOProgramEntry",
      "description": "Specific log entries for the SO Program."
    },
    "/profiles/{userId}/assignments/{assignmentId}": {
      "schema": "Assignment",
      "description": "Therapy homework and action items."
    }
  }
}
